# Backend Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (required for LLM, TTS, and STT)
# Get your key at https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Replicate API Key (optional - for vision models YOLO, SAM)
# Get your key at https://replicate.com/account/api-tokens
REPLICATE_API_KEY=your_replicate_api_key_here

# Default model to use (optional)
DEFAULT_MODEL=gpt-4o

# Database path (optional, defaults to ./data/brains.db)
DATABASE_PATH=./data/brains.db
